---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'About Us | UXHM',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="About Us"
    title="We’re Here to Help Small Businesses Thrive."
    subtitle="Too many fantastic plumbers, consultants, and trainers are left behind because their websites are outdated. UXHM was founded to fix that."
  />

  <Content
    isReversed
    title="Meet the Founder"
    image={{
      src: 'https://images.unsplash.com/photo-1556761175-5973dc0f32e7?ixlib=rb-4.0.3&auto=format&fit=crop&w=1632&q=80',
      alt: 'UXHM Founder',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        My mission is simple: give you a powerful website without the jargon.
      </h3>
      <p class="mb-4 text-muted">
        My name is <strong>[Your Name Here]</strong>, and I started this company because I saw too many business owners struggling with "tech headaches" instead of running their business.
      </p>
      <p class="mb-4 text-muted">
        I handle every project personally. I don’t just see a "web design project"; I see a business owner trusting me to help them grow their livelihood.
      </p>
      <p class="text-muted">
        Whether you need a simple brochure site or a complex app, I'm here to guide you through it—in plain English, with clear pricing and no surprises.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Features3
    title="Our Core Values"
    subtitle="How we work differently."
    columns={3}
    items={[
      {
        title: 'Expert & Capable',
        description: 'We know the tech inside out, so you don’t have to.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Clear & Direct',
        description: 'No jargon. No hidden fees. Radical transparency.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'A True Partner',
        description: 'We are here for the long haul, not just a quick launch.',
        icon: 'tabler:heart-handshake',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Let’s Chat',
        href: '/contact',
      },
    ]}
  >
    <Fragment slot="title">Ready to work with us?</Fragment>
    <Fragment slot="subtitle">
      Let's discuss your project. Your quote is free, and there’s no obligation.
    </Fragment>
  </CallToAction>
</Layout>