---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'UXHM | UK Small Business Digital Specialists',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="UK Small Business Specialists"
    actions={[
      {
        variant: 'primary',
        text: 'Get Your Free Quote',
        href: '/contact',
        icon: 'tabler:mail',
      },
      { text: 'View Our Packages', href: '/services' },
    ]}
    image={{ src: '~/assets/images/hero-image.jpg', alt: 'UXHM Digital Dashboard' }}
  >
    <Fragment slot="title">
      Stop Losing Customers. <span class="text-accent highlight">Start Winning Online.</span>
    </Fragment>

    <Fragment slot="subtitle">
      We don't just build websites. From <span class="font-semibold">Logos</span> and <span class="font-semibold">Mobile Apps</span> to <span class="font-semibold">SEO</span> and <span class="font-semibold">Social Media</span>, UXHM is the only digital partner your business needs.
    </Fragment>
  </Hero>

  <Features
    id="features"
    tagline="The All-In-One Solution"
    title="Why hire 5 freelancers when you can hire 1 partner?"
    subtitle="Everything you need to launch and grow, all under one roof."
    items={[
      {
        title: 'Websites & Apps',
        description:
          'Stunning, fast, mobile-first sites and bespoke apps that work perfectly on every device.',
        icon: 'tabler:device-laptop',
      },
      {
        title: 'Branding & Graphics',
        description:
          'Logos, flyers, and visuals that make you look pro from day one.',
        icon: 'tabler:palette',
      },
      {
        title: 'Growth & SEO',
        description:
          'Get found on Google and convert visitors into paying customers.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Monthly Care',
        description:
          'Maintenance and social media management, starting at just £50/mo.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <Content
    isReversed
    items={[
      {
        title: 'The Problem',
        description:
          'You’re an expert at what you do, but your website looks outdated and your social media is silent. You know you’re losing business to competitors, but you don\'t have the time or technical skills to fix it.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1525547719571-a2d4ac8945e2?ixlib=rb-4.0.3&auto=format&fit=crop&w=2344&q=80',
      alt: 'Business Owner Struggling',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Is your online presence letting you down?
      </h3>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'The UXHM Solution',
        description:
          'We specialize in one thing: helping UK small businesses thrive. Whether you need a simple "Digital Foundation" site or a complex "Interactive MVP" app, we handle the tech so you can handle the business.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80',
      alt: 'Modern Digital Engine',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        We turn your expertise into a digital engine.
      </h3>
    </Fragment>
  </Content>

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Your Free Quote',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title">Ready to upgrade your business?</Fragment>

    <Fragment slot="subtitle">
      Let’s have a chat. Your quote is free, and there’s no obligation.
    </Fragment>
  </CallToAction>
</Layout>