---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Free Website Audit for Nottingham Plumbers | UXHM',
  description:
    'Get a free 1-page Quick Wins Audit to increase calls and quote requests. Built for Nottingham plumbers. No obligation.',
  canonical: 'https://uxhm.co.uk/nottingham-plumber-website-audit',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Nottingham plumbers"
    title="Free 1‑page Website Audit (Quick Wins)"
  >
    <Fragment slot="subtitle">
      We’ll review your site for <strong>mobile speed</strong>, <strong>click‑to‑call</strong>, <strong>quote flow</strong>, and <strong>local SEO</strong>.
      You’ll get a clear list of fixes to win more enquiries — delivered as a <strong>PDF</strong>.
    </Fragment>
  </HeroText>

  <section class="max-w-5xl mx-auto px-4 sm:px-6 py-10">
    <div class="grid gap-6 lg:grid-cols-3">
      <div class="lg:col-span-2">
        <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-6">
          <h2 class="text-xl font-semibold">Request your free audit</h2>
          <p class="mt-2 text-gray-600 dark:text-gray-400">
            Fill this in and we’ll send the audit to you from <strong>nottingham@uxhm.co.uk</strong>.
            <span class="block mt-1">Typical delivery: <strong>24–48 hours</strong>.</span>
          </p>

          <form id="auditForm" class="mt-6">
            <div class="grid gap-4 sm:grid-cols-2">
              <div>
                <label class="block text-sm font-medium" for="business">Business name</label>
                <input id="business" name="business" required class="mt-1 w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 px-4 py-3" />
              </div>

              <div>
                <label class="block text-sm font-medium" for="website">Website URL</label>
                <input id="website" name="website" required placeholder="https://" class="mt-1 w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 px-4 py-3" />
              </div>

              <div>
                <label class="block text-sm font-medium" for="email">Email</label>
                <input id="email" name="email" type="email" required class="mt-1 w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 px-4 py-3" />
              </div>

              <div>
                <label class="block text-sm font-medium" for="phone">Phone (optional)</label>
                <input id="phone" name="phone" class="mt-1 w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 px-4 py-3" />
              </div>

              <div class="sm:col-span-2">
                <label class="block text-sm font-medium" for="areas">Areas you serve (optional)</label>
                <input id="areas" name="areas" placeholder="e.g. Nottingham, West Bridgford, Beeston…" class="mt-1 w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 px-4 py-3" />
              </div>

              <div class="sm:col-span-2">
                <label class="block text-sm font-medium" for="notes">Anything we should know? (optional)</label>
                <textarea id="notes" name="notes" rows={5} placeholder="e.g. emergency callouts, boilers, bathrooms…" class="mt-1 w-full rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 px-4 py-3" />
              </div>
            </div>

            <div class="mt-4 flex items-start gap-3">
              <input id="consent" name="consent" type="checkbox" required class="mt-1" />
              <label for="consent" class="text-sm text-gray-600 dark:text-gray-400">
                I agree that UXHM can use the details above to respond to this audit request.
              </label>
            </div>

            <div class="mt-6 flex flex-col sm:flex-row gap-3">
              <button type="submit" class="inline-flex items-center justify-center rounded-lg bg-primary px-5 py-3 font-semibold text-white">
                Request Free Audit (PDF)
              </button>
              <a href="mailto:nottingham@uxhm.co.uk" class="inline-flex items-center justify-center rounded-lg border border-gray-200 dark:border-gray-700 px-5 py-3 font-semibold">
                Email us instead
              </a>
            </div>

            <p class="mt-4 text-xs text-gray-500">
              No tracking pixels. If you’d prefer we don’t contact you again, you can reply “opt out”.
            </p>
          </form>
        </div>
      </div>

      <aside>
        <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-6">
          <h3 class="font-semibold">What you’ll get</h3>
          <ul class="mt-3 space-y-2 text-sm text-gray-600 dark:text-gray-400 list-disc pl-5">
            <li>Top conversion fixes (calls & quote requests)</li>
            <li>Speed + mobile quick wins</li>
            <li>Local SEO essentials for Nottingham intent</li>
            <li>Trust improvements (reviews, Gas Safe, proof)</li>
          </ul>

          <div class="mt-6 border-t border-gray-200 dark:border-gray-700 pt-5">
            <h3 class="font-semibold">If you want us to implement it</h3>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              If you like the audit, we can either build a simple one‑page plumber landing site (static) or a full multi‑page plumber website.
            </p>
            <ul class="mt-3 space-y-2 text-sm text-gray-600 dark:text-gray-400 list-disc pl-5">
              <li><strong>One‑page plumber landing site (static):</strong> from £199 (no hosting/monthly cost — we can host on Cloudflare for free)</li>
              <li><strong>New 7‑day plumber website:</strong> £399</li>
            </ul>
          </div>
        </div>
      </aside>
    </div>
  </section>

  <Features2
    title="Why this works"
    items={[
      {
        title: 'Built for trades',
        description: 'Clear services, areas, trust signals, and fast contact flow.',
        icon: 'tabler:tool',
      },
      {
        title: 'Mobile-first',
        description: 'Most enquiries happen on phones — we optimise for tap-to-call.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Local intent',
        description: 'We align pages to what people search in Nottingham.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <script>
    const form = document.getElementById('auditForm');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      const business = document.getElementById('business')?.value?.trim();
      const website = document.getElementById('website')?.value?.trim();
      const email = document.getElementById('email')?.value?.trim();
      const phone = document.getElementById('phone')?.value?.trim();
      const areas = document.getElementById('areas')?.value?.trim();
      const notes = document.getElementById('notes')?.value?.trim();

      const subject = `Free audit request — ${business || 'Nottingham plumber'}`;
      const lines = [
        'Free audit request (Nottingham plumber)',
        '',
        `Business: ${business || ''}`,
        `Website: ${website || ''}`,
        `Email: ${email || ''}`,
        `Phone: ${phone || ''}`,
        `Areas served: ${areas || ''}`,
        '',
        'Notes:',
        notes || '',
      ];

      const body = encodeURIComponent(lines.join('\n'));
      const mailto = `mailto:nottingham@uxhm.co.uk?subject=${encodeURIComponent(subject)}&body=${body}`;
      window.location.href = mailto;
    });
  </script>
</Layout>
